
@using userCase.Models
@model LoginViewModel
@{
    ViewBag.Title = "Giriş Sayfası"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
<link href="~/css/login-register.css" rel="stylesheet" />
<script> 
</script>
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Formu </h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>

                        <input asp-for="email" class="form-control" value="@ViewBag.email" placeholder="e-posta" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>

                        <input asp-for="password" class="form-control" value="@ViewBag.password" placeholder="Şifre Giriniz" />
                    </div>
                    <div class="row">
                        <div class="col-sm-7">
                            <input type="checkbox"  @ViewBag.rememberMe asp-for="rememberMe" class="form-check-input" />
                            <label class="form-check-label"> Beni Hatırla</label>
                        </div>
                        <div class="col-sm-5">
                            <a asp-area="" asp-controller="Home" asp-action="ResreshPassword">Şifre mi unutum!</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                    </div>
                    <div class="form-footer">
                        <h1>@ViewData["username"]  @ViewBag.Result</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
}



